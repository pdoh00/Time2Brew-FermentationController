                    <Button Margin="5" Name="cmdGetTemp">Get Temperature</Button>
                    <Button Margin="5" Name="cmdGetStats">Get Status</Button>
                    <Button Margin="5" Name="cmdTrimFS">Trim File System</Button>
                    <Button Margin="5" Name="cmdFormatFS">Format File System</Button>
                    <Button Margin="5" Name="cmdRestart">Restart</Button>
                    <Button Margin="5" Name="cmdFirmware">Upload Firmware</Button>
